<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="3dp">
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/lightButtonPressed1"
                android:endColor="@color/lightButtonPressed2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/lightButtonPressedBorder" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/lightButtonFocused1"
                android:startColor="@color/lightButtonFocused2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/lightButtonFocusedBorder" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/lightButton1"
                android:startColor="@color/lightButton2"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/lightButtonBorder" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>